<% layout('/layouts/boilerplate') %>
    <div class="register-body">
        <div class="container d-flex justify-content-center align-items-center mt-5">
            <div class="row">
                <div class="card shadow bg-body rounded" id="card-login" style="width: 25rem;">
                    <h1 class="card-title pb-3">Register</h1>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <button class="btn btn-success" id="btn-login">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>